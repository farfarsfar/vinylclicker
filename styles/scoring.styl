#scoringContainer
  display flex
  flex-flow row wrap
  justify-content center
  align-content flex-start
  & .containerHeader
    margin-bottom 0.2em

.multiplierThumbnail
  flex 0 8em
  display inline-flex
  flex-direction column
  justify-content center
  width 8em
  height 8em
  margin 0.5em
  padding 0.5em 0
  background rgb(157, 163, 136)
  border-radius 5px
  & .multiplierCount,
    .multiplierName
    display block
    align-self center
    margin-top auto
  & .multiplierCount
    font-size 3em
    font-family pacifico
  & .multiplierName
    font-size 0.6em
 